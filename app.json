{
  "expo": {
    "name": "CrispIt",
    "slug": "crispit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.crispit.app",
      "infoPlist": {
        "NSCameraUsageDescription": "CrispIt needs camera access to scan and identify produce.",
        "NSPhotoLibraryUsageDescription": "CrispIt needs photo library access to analyze produce images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "package": "com.crispit.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CrispIt to scan produce for freshness assessment.",
          "microphonePermission": false
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CrispIt to access your photos."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "f6f34e62-b514-4d8e-8203-d034bdebabf0"
      }
    }
  }
}
