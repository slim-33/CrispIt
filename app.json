{
  "expo": {
    "name": "CrispIt",
    "slug": "CrispIt",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "crispit",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#7CB89B"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "CrispIt needs camera access to scan produce freshness",
        "NSPhotoLibraryUsageDescription": "CrispIt needs photo library access to upload produce images"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#7CB89B"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "CrispIt needs camera access to scan produce freshness"
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "CrispIt needs camera access to scan barcodes"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
